<UserControl x:Class="FingerPrintWPF.FingerPrint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FingerPrintWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Style="{StaticResource ContentRoot}">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock x:Name="StatusLabel" x:FieldModifier="public" Text="Please Enter Fingerprint" HorizontalAlignment="Center"/>
            <Image x:Name="FingerImage" Source="/Assets/Images/defFingerPrint.jpg" HorizontalAlignment="Left" Height="310" Margin="25,28,0,0" VerticalAlignment="Top" Width="279" />
            <ProgressBar x:Name="FingerProgress" Minimum="0" Maximum="4" Value="0" Height="16" IsIndeterminate="False" Margin="0,0,0,16" />

        </StackPanel>



    </Grid>


</UserControl>
